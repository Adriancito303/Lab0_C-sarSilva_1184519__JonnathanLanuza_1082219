@model IEnumerable<Lab0_CésarSilva_1184519__JonnathanLanuza_1082219.Models.Clients>
@{
    ViewData["Title"] = "Index";
}

<h1>Clients List</h1>
<p>
    <a asp-action="Create">Create new client</a>
</p>
@*<p>
    <a asp-action="Sort">Sort the list by Name</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => person.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => person.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => person.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => person.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit Client information", "Edit", new { Name = person.Name }) |
                    @Html.ActionLink("Details", "Details", new { Name = person.Name }) |
                </td>
            </tr>
        }
    </tbody>
</table>
